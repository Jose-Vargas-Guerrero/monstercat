<style>
  .track-container {
    color: #fdfdfd;
    height: 100vh;
    max-width: 100vw;
    padding: 0 150px;
  }

  .track-title {
    font-size: 3rem;
    letter-spacing: 3px;
    width: 100%;
    text-align: left;
  }

  .row {
    height: auto;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
  }

  .track-container p,
  .title,
  .time,
  .fa-share {
    margin: 1rem 1rem;
  }

  .audio {
    margin: 1rem 20%;
  }

  @media only screen and (max-width: 767px) {
    .track-container {
      padding-top: 200px;
      color: #fdfdfd;
      height: auto;
      max-width: 100vw;
      padding: 0 0px;
    }

    .track-title {
      font-size: 2rem;
      letter-spacing: 3px;
      width: 100%;
      text-align: center;
    }

    .row {
      height: auto;
      margin: 1.2rem 0;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .track-container p,
    .title,
    .time,
    .fa-share {
      margin: 1rem 1rem;
    }

    .fa-share {
      display: none;
    }

    .audio {
      margin: 1rem 20%;
    }
  }
</style>
