<style>
  /* styles from the hero section gradient and blur */
  
  
  .hero-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      linear-gradient(to bottom, transparent, rgba(0, 0, 0, 10)),
      url("https://cdx.monstercat.com/resized/8a169d846576fcdad7a0a6e04d371eb05b2a9397/600.webp")
        center/cover;
    filter: blur(4px);
    z-index: -1;
  }

  .hero-container img,
  .hero-container h1,
  .hero-container h2,
  .hero-container button {
    position: relative;
    z-index: 1;
  }

  .album{
    height: 450px;
    width: 450px;
  }

